// launch.json

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GDB Debug",
            "preLaunchTask": "Build",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/x264",
            "args": [
                "--input-res", "176x144",
                "--fps", "30",
                // basic
                "--frames", "300",
                "--profile", "high",
                "--tune", "ssim",
                "--preset", "slower",
                // structure
                "--keyint", "150",
                "--bframes", "7",
                "--b-adapt", "0",
                "--b-pyramid", "none",
                "--no-scenecut",
                // rc
                "--bitrate", "400",
                "--vbv-maxrate", "600",
                "--vbv-bufsize", "600",
                "--rc-lookahead", "8",
                // analysis
                "--me", "dia",
                "--ref", "1",
                // output
                "--output", "${workspaceFolder}/resource/foreman_176x144_300.h264",
                "${workspaceFolder}/resource/foreman_176x144_300.yuv"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "LLDB Debug",
            "preLaunchTask": "Build",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/x264",
            "args": [
                "--input-res", "176x144",
                "--fps", "30",
                // basic
                "--frames", "300",
                "--profile", "high",
                "--tune", "ssim",
                "--preset", "slower",
                // structure
                "--keyint", "150",
                "--bframes", "7",
                "--b-adapt", "0",
                "--b-pyramid", "none",
                "--no-scenecut",
                // rc
                "--bitrate", "400",
                "--vbv-maxrate", "600",
                "--vbv-bufsize", "600",
                "--rc-lookahead", "8",
                // analysis
                "--me", "dia",
                "--ref", "1",
                // output
                "--output", "${workspaceFolder}/resource/foreman_176x144_300.h264",
                "${workspaceFolder}/resource/foreman_176x144_300.yuv"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        }
    ]
}